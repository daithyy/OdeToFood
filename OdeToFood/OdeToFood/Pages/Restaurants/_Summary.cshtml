@using OdeToFood.Core
@model Restaurant

<div class="card w-auto">
    <div class="card-header">
        <h3 class="card-title">@Model.Name</h3>
    </div>
    <div class="card-body">
        <span class="card-text">Location: @Model.Location</span>
        <span class="card-text">Cuisine: @Model.Cuisine</span>
    </div>
    <div class="card-footer">
        <a class="btn btn-lg"
           asp-page="./Detail"
           asp-route-restaurantId="@Model.Id">
            <i class="fas fa-search-plus"></i>
        </a>
        <a class="btn btn-lg"
           asp-page="./Edit"
           asp-route-restaurantId="@Model.Id">
            <i class="fas fa-edit"></i>
        </a>
        <a class="btn btn-lg"
           asp-page="./Delete"
           asp-route-restaurantId="@Model.Id">
            <i class="fas fa-trash"></i>
        </a>
    </div>
</div>